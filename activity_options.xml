<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_frame"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="Difficulty affects the speed of your bullet, number of lives you get, and the size of your paddle."
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/difficultyTV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom|left"
            android:paddingLeft="10sp"
            android:text="Game Difficulty"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/difficultyRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/difButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/difButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/difButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hard"
                android:textColor="#000000" />
        </RadioGroup>

        <TextView
            android:id="@+id/topicTV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom|left"
            android:paddingLeft="10sp"
            android:text="In Game Music"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/infoSpinner"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_marginBottom="5sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom|left"
            android:gravity="bottom"
            android:paddingLeft="10sp"
            android:text="Sound Effects"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/soundEffectsRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/soundButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/soundButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Off"
                android:textColor="#000000" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_gravity="bottom|left"
            android:gravity="bottom"
            android:paddingLeft="10sp"
            android:text="Background Type"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/backgroundRG"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/backgroundButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip trough Hyper Space (Animated)"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/backgroundButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cyber Hex (Static)"
                android:textColor="#000000" />
        </RadioGroup>

        <Button
            android:id="@+id/questionsButton"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="#708CF1"
            android:onClick="goBack"
            android:text="Save and Return" />

    </LinearLayout>

</ScrollView>